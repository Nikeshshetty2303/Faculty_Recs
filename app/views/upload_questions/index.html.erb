<p id="notice"><%= notice %></p>

<h1>Upload Questions</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Upload section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_questions.each do |upload_question| %>
      <tr>
        <td><%= upload_question.title %></td>
        <td><%= upload_question.upload_section_id %></td>
        <td><%= link_to 'Show', upload_question %></td>
        <td><%= link_to 'Edit', edit_upload_question_path(upload_question) %></td>
        <td><%= link_to 'Destroy', upload_question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Upload Question', new_upload_question_path %>
