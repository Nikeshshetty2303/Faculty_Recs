<%= render partial: 'partials/navbar', locals: { user: @user, locale: true } %>
<div class="container mt-4">
  <% if notice.present? %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-header">
      <h1 class="card-title"><%= @announcement.title %></h1>
      <p class="text-muted mb-0">
       Posted on <%= @announcement.created_at.in_time_zone('Asia/Kolkata').strftime("%B %d, %Y at %I:%M %p IST") %>
      </p>
    </div>
    <div class="card-body">
      <div class="announcement-content">
        <%= simple_format(@announcement.description) %>
      </div>
    </div>
    <div class="card-footer">
    </div>
  </div>
</div>