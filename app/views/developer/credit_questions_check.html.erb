<%= render partial: 'partials/navbar', locals: { user: @user, locale: true } %>

<div class="container mt-4">
  <%= link_to "Go Back", :back, class: "btn btn-light mb-3" %>


    <div class="card mb-4 shadow-sm">

      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Application ID</th>
                <th scope="col">Credit Score</th>
                <th scope="col">Validate Credits</th>
                <th scope="col">Verified Credits</th>
                <th scope="col">Eligibility</th>
              </tr>
            </thead>
            <tbody>
              <% Response.where(status: "Freezed").each do |response| %>
                <% answer = response.credit_answers.joins(:credit_question).find_by(credit_questions: { title: "Number  of new laboratory establishment" })%>
                <%if answer != nil && answer.answer != 0%>
                <tr>
                  <td><%= response.app_no.strip if response.app_no.present? %></td>
                  <td><%= response.credit_score.round(1) %></td>
                  <td><%= link_to "View Response", validate_response_path(id: response.id), class: 'btn btn-outline-secondary btn-sm' %></td>
                  <td><%= response.validated_credit_score ? response.validated_credit_score.round(1) : response.validated_credit_score %></td>

                  <td><%=answer.answer%> </td>
                </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

</div>